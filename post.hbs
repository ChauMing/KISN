{{!< default}}
<article class="post-wraper">
{{#post}}
  <h1 style="text-align: center;font-size: 36px; line-height: 2;">{{title}}</h1>
  {{content}}
  <p class="post-sign">
    -- {{author}}
    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">
      {{date format="DD MMMM YYYY"}}
    </time>
  </p>
{{/post}}
</article>
